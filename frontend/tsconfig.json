{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": [
    "src",
    // "code.editor.d.ts",
    // "embed.editor.d.ts",
    // "header.editor.d.ts",
    // "image.editor.d.ts",
    // "list.editor.d.ts",
    // "inlineCode.editor.d.ts",
    // "code.editor.d.ts",
    // "marker.editor.d.ts",
    // "quote.editor.d.ts",
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}
